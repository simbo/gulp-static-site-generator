- title = title ? title : '';
doctype html
html

  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title= (title != '' ? title + ' | ' : '') + 'Demo of gulp-static-site-generator'
      block styles
        link(rel="stylesheet", href="/assets/example.css")

  body
    block body

      header
        block header
          nav
            :markdown
              - [index](/)
              - [foo](/foo/)
              - [bar](/bar/)
              - [baz](/bar/baz/)
              - [plain](/plain/)
              - [data](/data/)
              - [empty](/empty/)

      main
        block main
          h1= title
          block contents
            | !{contents}

      footer
        block footer
          p #[strong â˜…] #[code= path] (generated from #[code= srcRelativePath])

